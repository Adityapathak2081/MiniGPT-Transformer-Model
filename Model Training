from transformers import GPT2LMHeadModel, Trainer, TrainingArguments

# Load GPT-2 model
model = GPT2LMHeadModel.from_pretrained("gpt2")

# Define training arguments
training_args = TrainingArguments(
    output_dir="./gpt2-mental-health",
    overwrite_output_dir=True,
    num_train_epochs=3,
    per_device_train_batch_size=2,
    save_steps=500,
    save_total_limit=2,
    logging_steps=100,
    prediction_loss_only=True,
)

from transformers import GPT2Tokenizer

# Load tokenizer
tokenizer = GPT2Tokenizer.from_pretrained("gpt2")

# Example raw dataset (replace with your actual data)
raw_texts = [
    "I feel anxious about my exams.",
    "I'm struggling with motivation lately."
]

# Tokenize dataset
tokenized_dataset = tokenizer(raw_texts, truncation=True, padding=True, return_tensors="pt")

# Prepare Trainer
trainer = Trainer(
    model=model,
    args=training_args,
    train_dataset=tokenized_dataset,
    tokenizer=tokenizer
)

